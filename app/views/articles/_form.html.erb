
<% if @article.errors.any? %>
	
	<ul>
		<% @article.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
	<%= f.label :title %> <br>
	<%= f.text_field :title %> <br>
	<%= f.label :description %> <br>
	<%= f.text_area :description %>

	<%= f.submit %>

<% end %>

<%= link_to 'Back to listings.', articles_path %>